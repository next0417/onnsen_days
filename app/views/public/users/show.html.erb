<div class="container">
  <h1 class="mt-4 mb-3">
    マイページ
    <%= link_to "編集", edit_user_path(@user), class: "btn btn-success" %>
  </h1>
  <hr>
  <div class="row mt-4">
    <div class="offset-md-2 col-md-2">
      <div class="row mb-4">
        <div class="col-md-12">
          <%= image_tag @user.get_image(200, 200), class: "w-100" %>
        </div>
      </div>
    </div>
    <div class="col-md-8">
      <div class="row mb-4">
        <div class="col-md-3">ユーザー名</div>
        <div class="col-md-9"><%= @user.name %></div>
      </div>
      <div class="row mb-4">
        <div class="col-md-3">メールアドレス</div>
        <div class="col-md-9"><%= @user.email %></div>
      </div>
      <div class="row mb-4">
        <div class="col-md-3">自己紹介</div>
        <div class="col-md-9"><%= simple_format(@user.introduction) %></div>
      </div>
      <div class="row mb-4">
        <div class="col-md-3"></div>
        <div class="col-md-9">
          <span>退会はこちらから</span>
          <span class="ml-2"><%= link_to "退会", users_no_membership_path, class: "btn btn-danger" %></span>
        </div>
      </div>
    </div>
  </div>
</div>