<div class="container">
  <h1 class="mt-4 mb-3">マイページ編集</h1>
  <% if @user.errors.any? %>
  <%= @user.errors.count %>件のエラーが発生しました
  <ul class="text-danger">
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>
  <hr>
  <%= form_with model: @user, url: user_path do |f| %>
    <div class="row mt-4">
      <div class="col-md-7">
        <div class="form-group row">
          <%= f.label :name, "ユーザー名", class: "offset-md-1 col-md-3 col-form-label pr-0 pl-4" %>
          <div class="col-8">
            <%= f.text_field :name, :placeholder =>"ユーザー名", autofocus: true, autocomplete: "name", class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :introduction, "自己紹介", class: "offset-md-1 col-md-3 col-form-label pr-0 pl-4" %>
          <div class="col-8">
            <%= f.text_area :introduction, :placeholder =>"自己紹介", autofocus: true, autocomplete: "introduction", class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-md-8 offset-md-4">
              <span><%= f.submit "更新", class: 'btn btn-primary' %></span>
              <span class="ml-3"><%= link_to "戻る", user_path(@user), class: 'btn btn-secondary' %></span>
          </div>
        </div>
      </div>
      <div class="col-md-5">
        <div class="form-group row">
          <%= f.label :image, "プロフィール画像", class: "col-4 col-form-label pr-0 pl-4" %>
        </div>
        <div class="form-group row">
          <%= f.file_field :image, accept: "image/*", class: "col-form-label pr-0 pl-4" %>
        </div>
      </div>
    </div>
  <% end %>
</div>