<div class="container">
  <h1 class="mt-4 mb-3">温泉一覧</h1>
  <hr>
  <div class="row">
    <% @onsens.each do |f| %>
    <div class="col-md-4">
      <div class="card">
        <div id="carouselExampleControls_<%= f.id %>" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <% f.images.first(1) do |image| %>
                <%= image_tag image, :image, class: "carousel_image"  %>
              <% end %>
            </div>
            <% f.images.drop(1) do |image| %>
              <div class="carousel-item">
                <%= image_tag image, :image, class: "carousel_image" %>
              </div>
            <% end %>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleControls_<%= f.id %>" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls_<%= f.id %>" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= f.name %></h5>
          <p class="card-text mb-0"><%= f.introduction %></p>
          <div class="row">
            <div class="col-md-3">口コミ</div>
            <div class="col-md-9">
              <div id="#star-rate-#{f.id}"></div>
              <script>
                $('#star-rate-#{f.id}').raty({
                  size: 36,
                  starOff: "#{asset_path('star-off.png')}",
                  starOn: "#{asset_path('star-on.png')}",
                  starHalf: "#{asset_path('star-half.png')}",
                  half: true,
                  readOnly: true,
                  score: "#{f.reviews.average(:rate).to_f.round(1)}",
                });
              </script>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>

