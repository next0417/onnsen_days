<div class="title container">
  <div class="title row">
    <h2>新規登録</h2>
  </div>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
<div class="container">
  <div class="row">
    <div class="col-md-7">
      <table class="user_sign_up w-100 ml-2">
        <tr>
          <th>ユーザー名</th>
          <td><%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %></td>
        </tr>
        <tr>
          <th>パスワード(6文字以上)</th>
          <td><%= f.password_field :password, autocomplete: "new-password", class: "form-control" %></td>
        </tr>
        <tr>
          <th>パスワード(確認用)</th>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %></td>
        </tr>
        <tr>
          <th class="align-top">自己紹介</th>
          <td><%= f.text_area :introduction, autofocus: true, autocomplete: "introduction", class: "form-control" %></td>
        </tr>
        <tr>
          <th></th>
          <td class="text-center"><%= f.submit "新規登録", class: 'btn btn-primary' %></td>
        </tr>
      </table>
    </div>
    <div class="col-md-5">
      <div class="profile_image">プロフィール画像</div>
      <%= f.file_field :image, accept: "image/*" %>
    </div>
  </div>
</div>
<% end %>

    <div class="mt-2 center-block">
      <h3 class="text-center">ログインは<%= render "public/shared/links" %>から</h3>
    </div>

