<div class="container">
  <h1 class="mt-4 mb-3">新規登録</h1>
  <%= render "public/shared/error_messages", resource: resource %>
  <hr>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="row mt-4">
      <div class="col-md-7">
        <div class="form-group row">
          <%= f.label :name, "ユーザー名", class: "col-4 col-form-label pr-0 pl-4" %>
          <div class="col-8">
            <%= f.text_field :name, :placeholder =>"ユーザー名", autofocus: true, autocomplete: "name", class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :email, "メールアドレス", class: "col-4 col-form-label pr-0 pl-4" %>
          <div class="col-8">
            <%= f.email_field :email, :placeholder =>"メールアドレス", autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :password, "パスワード(6文字以上)", class: "col-4 col-form-label pr-0 pl-4" %>
          <div class="col-8">
            <%= f.password_field :password, :placeholder =>"パスワード(6文字以上)", autofocus: true, autocomplete: "new-password", class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :password_confirmation, "パスワード(確認用)", class: "col-4 col-form-label pr-0 pl-4" %>
          <div class="col-8">
            <%= f.password_field :password_confirmation, :placeholder =>"パスワード(確認用)", autofocus: true, autocomplete: "new-password", class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :introduction, "自己紹介", class: "col-4 col-form-label pr-0 pl-4" %>
          <div class="col-8">
            <%= f.text_area :introduction, :placeholder =>"自己紹介", autofocus: true, autocomplete: "introduction", class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-md-8 offset-md-4">
              <%= f.submit "新規登録", class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
      <div class="col-md-5">
        <div class="form-group row">
          <%= f.label :image, "プロフィール画像", class: "col-4 col-form-label pr-0 pl-4" %>
        </div>
        <div class="form-group row">
          <%= f.file_field :image, accept: "image/*", class: "col-form-label pr-0 pl-4" %>
        </div>
      </div>
    </div>
    <div class="mt-3 d-flex justify-content-center">
      <h3>ログインは<%= render "public/shared/links" %>から</h3>
    </div>
  <% end %>
</div>